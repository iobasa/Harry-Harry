{% for block in section.blocks %}
<img src="{{ block.settings.image | img_url: '1000x' }}" alt="{{ block.settings.image.alt }}">
{% endfor %}



{% schema %}
  {
    "name": "My Image Gallery",
    "class": "image-gallery",
    "tag": "section",
    "max_blocks": 6,
    "settings": [
      {
        "id": "heading",
        "type": "text",
        "label": "Heading"
      }
    ],
     "blocks": [
      {
        "type": "image",
        "name": "An Image Block",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "image gallery",
        "category": "Some Gallery"
      }
    ]
  }
{% endschema %}
